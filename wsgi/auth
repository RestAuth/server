import os, sys
sys.path.append('/usr/local/share/RestAuth')
os.environ['DJANGO_SETTINGS_MODULE'] = 'RestAuth.settings'

import django.core.handlers.wsgi
application = django.core.handlers.wsgi.WSGIHandler()

from django import db
from RestAuth.BasicAuth.models import verify_service

def check_password(environ, user, password):
	host = environ['REMOTE_ADDR']

        try:
        	db.reset_queries()
		return verify_service( user, password, host )
        finally:
                db.connection.close()
